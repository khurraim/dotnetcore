@model IEnumerable<FoodOrderApp.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="container">
    <h1 class="my-5">View All Messages</h1>

    <table class="table table-responsive" border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Item</th>
              
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderID)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderName)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderAdress)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderPhone)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderItem)</td>
                    
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@item.OrderID">
                            <button onclick="confirm('Are you sure ypu want to delete this record ?');" type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>



</div>