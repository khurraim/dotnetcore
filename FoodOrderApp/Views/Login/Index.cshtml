@{
    ViewData["Title"] = "Admin Login";
}
@using Microsoft.AspNetCore.Http;
@if (Context.Session.GetString("adminname") == null)
{
    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Admin Login</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Admin Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="card card-body my-5">
            <div class="bg-dark p-3 mb-5">
                <h1 class="text-center  text-white">Admin Login</h1>
            </div>

            <form method="post" asp-controller="Login" asp-action="CheckLogin">
                <div class="form-group mb-3">
                    <label for="name">Admin Email :</label>
                    <input class="form-control" name="Admin_Email" type="email" placeholder="Enter admin email" required="required" />

                </div>
                <div class="form-group mb-3">
                    <label for="pwd">Admin Password :</label>
                    <input class="form-control" name="Admin_Password" type="password" placeholder="Enter admin password" required="required" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    Context.Response.Redirect("/admin");
}